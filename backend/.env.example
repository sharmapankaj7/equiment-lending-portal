# Environment Configuration for Phase 2
# Copy this to .env and update with your values

# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/equipment_lending

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Email Service Configuration (Phase 2 Enhancement)
# For Gmail (requires app-specific password)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=Equipment Portal <noreply@equipmentportal.com>

# Alternative SMTP Configuration (e.g., for Ethereal, SendGrid, AWS SES)
# EMAIL_SERVICE=smtp
# SMTP_HOST=smtp.ethereal.email
# SMTP_PORT=587
# EMAIL_USER=your-ethereal-user
# EMAIL_PASSWORD=your-ethereal-password

# Notification Configuration
NOTIFICATION_CHECK_TIME=08:00
OVERDUE_CHECK_TIME=09:00
DUE_DATE_REMINDER_DAYS=2

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Application Settings
MAX_BORROW_DAYS=14
ENABLE_EMAIL_NOTIFICATIONS=true
